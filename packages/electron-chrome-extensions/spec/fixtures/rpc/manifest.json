{
  "name": "chrome-rpc",
  "version": "1.0",
  "browser_action": {
    "default_title": "RPC"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "manifest_version": 2,
  "permissions": ["webRequest", "webRequestBlocking", "<all_urls>"]
}
